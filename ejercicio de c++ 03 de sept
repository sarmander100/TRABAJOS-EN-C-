	void ejercicio ()//2
		{
			cout<< "QUE IMPRIMAS IMPAR Y PAR \n";
			int i,n1;
			cout << " SI QUIERE NUMEROS PARES ESCRIBA MERO PARES \n ";
			cin >> n1;
			if (n1% 2==0)
			{
				for (int num=1; num <11 ; num++)
				{
				num = num +1;
				cout<<num <<"\n";
				cout << endl ;
				}
			}
			else
			{	
			for (int num=1; num <11 ; num++)
				{
				cout<<num <<"\n";
				num = num +1;
				cout << endl ;
				}	
			}
					
		}
	void caracter ()//3
		{
			cout<< " pida carcter la tabla de multiplicajon del 5(1-10)) \n";
			int multipicacion, numero, a=1;
			cout <<" ingrese un numero de multiplicacion ";
			cin >> numero;
				cout << " la tabla del" << numero << "es :"<<endl;
				do
				{
					multipicacion = numero * a ;
					cout<<numero <<" x "<< a << " = "<<multiplicacion << endl;
					a++;
					
				}
			while ( a<=10);
			
			
		}
